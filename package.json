{
  "name": "Adamantium",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "prestart:prod": "rimraf dist && npm run build",
    "build": "nest build -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "prettier": "prettier --write '{src,test}/**/*.ts' --no-semi",
    "test": "jest src",
    "test:watch": "jest src --watch",
    "test:cov": "jest src --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest ./test --detectOpenHandles"
  },
  "dependencies": {
    "@ethereumjs/tx": "^3.3.2",
    "@nestjs/axios": "0.0.2",
    "@nestjs/common": "8.0.4",
    "@nestjs/config": "1.0.1",
    "@nestjs/core": "8.0.4",
    "@nestjs/microservices": "^8.0.4",
    "@nestjs/platform-express": "8.0.4",
    "@nestjs/schedule": "1.0.0",
    "@nestjs/swagger": "5.0.8",
    "@nestjs/terminus": "^8.0.0-next.0",
    "@nestjs/typeorm": "^8.0.2",
    "@types/web3": "^1.2.2",
    "blakejs": "1.1.1",
    "class-transformer": "^0.3.1",
    "class-validator": "0.13.1",
    "elliptic": "^6.5.4",
    "eth-lib": "^0.1.29",
    "ethereumjs-common": "^1.5.2",
    "ethereumjs-tx": "^2.1.2",
    "ethereumjs-util": "^7.1.2",
    "ethers": "^5.4.7",
    "joi": "^17.4.0",
    "keccak256": "^1.0.3",
    "mongodb": "^4.1.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "secp256k1": "^4.0.2",
    "swagger-ui-express": "^4.0.7",
    "tweetnacl-ts": "^1.0.3",
    "typeorm": "^0.2.38",
    "typescript": "4.3.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "8.1.0",
    "@nestjs/schematics": "8.0.2",
    "@nestjs/testing": "8.0.4",
    "@types/cron": "1.7.3",
    "@types/express": "4.17.13",
    "@types/jest": "26.0.24",
    "@types/node": "15.6.0",
    "@types/supertest": "2.0.11",
    "jest": "26.6.3",
    "jest-create-mock-instance": "^1.1.0",
    "prettier": "^1.19.1",
    "source-map-support": "0.5.16",
    "supertest": "^6.1.6",
    "ts-jest": "26.5.6",
    "ts-lint": "^4.5.1",
    "ts-loader": "^6.2.1",
    "ts-node": "10.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^1.11.2"
  },
  "peerDependencies": {
    "rxjs": "7.3.0"
  },
  "resolutions": {
    "rxjs": "7.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "node"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../test/coverage",
    "collectCoverageFrom": [
      "**/*.{ts,js}",
      "!**/*.module.ts",
      "!**/main.ts",
      "!**/validation/*"
    ],
    "coveragePathIgnorePatterns": [
      "/src/migration/"
    ],
    "testEnvironment": "node"
  }
}
